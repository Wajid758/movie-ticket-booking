<%- include('layout/header') %>
<div class="continer">
    <div class="offset-3 col-md-6 mt-5">
        <h3 class="mt-4">Card Payment</h3>
        <form class="form p-5 border">
            <div class="mb-3">
              <label for="cardname" class="form-label">Card Holder name</label>
              <input type="text" class="form-control" id="cardname" />
            </div>
            <div class="mb-3">
              <label for="cardno" class="form-label">Card No</label>
              <input type="number" class="form-control" id="cardno" maxlength="12" placeholder="0000-0000-0000" />
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="expiry" class="form-label">Expiry</label>
                    <input type="date" class="form-control" id="expiry"/>
                  </div>
                  <div class="col-md-6">
                    <label for="cvv" class="form-label">CVV</label>
                    <input type="text" class="form-control" id="cvv" placeholder="000" max="3"/>
                  </div>
            </div>
            
            <a type="submit" class="btn btn-danger mt-3" href="/bill/<%= payment._id%>">Check Out</a>
          </form>
    </div>
</div>

<%- include('layout/footer') %>